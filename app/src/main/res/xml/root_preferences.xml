<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Harita">

        <ListPreference
            android:defaultValue="Standart"
            android:entries="@array/styles"
            android:entryValues="@array/styles"
            android:key="list_preference_1"
            android:title="Harita Stili" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Coğrafi Sınır">

        <EditTextPreference
            android:key="radius"
            android:title="Coğrafi Sınır Yarıçap"
            android:persistent="true"
            android:dialogTitle="Coğrafi Sınır Yarıçap"
            android:defaultValue="300" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Video">

        <ListPreference
            android:defaultValue="Uygulamada kal"
            android:entries="@array/videoOptions"
            android:entryValues="@array/videoOptions"
            android:key="list_preference_2"
            android:title="Video Oynatım Şekli" />

    </PreferenceCategory>

</PreferenceScreen>